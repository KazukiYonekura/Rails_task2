<div class="container reservations">
  <h4 class="reservations-h4">予約済みルーム一覧</h4>
  <table>
  <thead class="res-thead">
  	<tr>
  	  <th>ルーム画像</th>
  	  <th class="no-wrap">ルーム名</th>
  	  <th class="no-wrap">ルーム紹介</th>
  	  <th class="no-wrap">合計料金</th>
  	  <th>開始日</th>
  	  <th>終了日</th>
  	  <th>予約確定日時</th>
  	</tr>
  </thead>
  <tbody>
    <% @res.each do |res| %>
  	<tr>
  	  <td>
  	  	<a href="<%= "/posts/#{res.room_id}" %>">
  	  	<img src="/assets/room01.jpg" class="tdimage-top">
  	    </a>
  	  </td>
  	  <td class="post-name">
  	    <a href="<%= "/posts/#{res.room_id}" %>"><%= res.post_name %></a>
  	  </td>
  	  <td class="post-text"><%= res.post_text %></td>
  	  <td class="price-icon">¥<%= res.price %></td>
  	  <td><%= res.start_date %></td>
  	  <td><%= res.end_date %></td>
  	  <td><%= res.created_at %></td>
  	</tr>
    <% end %>
  </tbody>
  </table>
</div>