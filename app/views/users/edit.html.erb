<div class="container login">
  <div class="login-frame">
  	<div class="login-form">
  	  <p class= "login-text-edit">アカウント編集</p>
      <%= form_tag("/users/update") do %>
  	  <div class="login-item">
        <p class="login-label">メールアドレス</p>
  	    <input name="email" type="text" class="login-email">
  	  </div>
  	  <div class="login-item">
        <p class="login-label">変更後パスワード(変更する場合のみ入力)</p>
        <input name="change_password" type="password" class="login-email">
      </div>
      <div class="login-item">
        <p class="login-label">パスワード確認用(変更する場合のみ入力)</p>
        <input name="change_rpassword" type="password" class="login-email">
      </div>
      <div class="login-item">
        <p class="login-label">現在のパスワード</p>
        <input name="password" type="password" class="login-email" placeholder="現在のパスワードを入力">
      </div>
  	  <div class="login-item">
  	    <input type="submit" name="commit" value="更新" class="btn btn-login">
  	  </div>
      <% end %>
      <div class="login-item login-item-back">
        <a href="/users/account" class="btn btn-back">
          <p>戻る</p>
        </a>
      </div>
  	</div>
  </div>
</div>