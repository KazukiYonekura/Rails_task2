<div class="container login">
  <div class="login-frame">
  	<div class="login-form">
  	  <p class= "login-text">ログイン</p>
      <%= form_tag("/login") do %>
  	  <div class="login-item">
  	    <div class="login-left-icon">
  	    </div>
  	    <input name="email" type="email" class="login-email" placeholder="メールアドレス" value="<%= @email %>">
  	  </div>
  	  <div class="login-item">
  	    <div class="login-left-icon">
  	    </div>
  	    <input name="password" type="password" class="login-email" placeholder="パスワード" value="<%= @password %>">
  	  </div>
  	  <div class="login-item">
  	    <input type="submit" name="commit" value="ログイン" class="btn btn-login">
  	  </div>
      <% end %>
  	  <a href="/users/sign_up">新しいアカウントを作成</a>
  	</div>
  </div>
</div>